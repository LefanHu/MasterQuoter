<script>
  // Toggle showing / not showing
  function menuClick() {
    var dropstring = event.srcElement.id + "Drop";

    document.getElementById(dropstring).classList.toggle("show");

    var change = document.getElementById(event.srcElement.id).innerHTML;

    if (change.includes("&gt;")) {
      change = change.replace("&gt;", "\u02C5");
      document.getElementById(event.srcElement.id).innerHTML = change;
    } else {
      change = change.replace("\u02C5", " &gt;");
      document.getElementById(event.srcElement.id).innerHTML = change;
    }

  }
</script>
